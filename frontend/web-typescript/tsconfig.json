{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "moduleResolution": "node",
        "lib": [ "es2015", "dom" ],
        "outFile": "dist/main.js",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    },
    "include": [
        "src/app/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
